<body class="login-bg">
    <div class="main ">
        <!--登录-->
        <div class="login-dom login-max">
            <div class="logo text-center">
                <a href="#">
                    <img src="/Content/superui/content/ui/img/logo.png" width="180px" height="180px" />
                </a>
            </div>
            <div class="login container " id="login">
                <p class="text-big text-center logo-color">
                    同一个账号，连接一切
                </p>

                <p class="text-center margin-small-top logo-color text-small">
                    SuperUI框架
                </p>
                <form id="loginform" class="login-form" autocomplete="off">
                    <div class="login-box border text-small" id="box">
                        <div class="name border-bottom">
                            <input type="text" placeholder="手机/邮箱/账号（随便填）" id="username" name="username" datatype="*" nullmsg="请填写帐号信息" value="admin" />
                        </div>
                        <div class="pwd">
                            <input type="password" placeholder="密码（随便填）" datatype="*" id="password" name="password" nullmsg="请填写帐号密码" value="123456" />
                        </div>
                    </div>
                    <div style="display:none;">
                        <div class="checkbox icheck">
                            <label>
                                <input name="rememberMe"  type="checkbox"> 记住密码
                            </label>
                        </div>
                    </div>
                    <input type="button" id="btnsubmit" class="btn text-center login-btn"  returl="@ViewBag.ReturnUrl" value="立即登录" />
                </form>

            </div>
        </div>
        <div class="footer text-center text-small ie">
